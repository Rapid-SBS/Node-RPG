<script> 
const setWeaponBow = () => {
  player.weapon = new Weapon("Bow", "bow");
  player.basic = "Arrow";
  player.special = "Doubleshot";
  localStorage.setItem('objPlayer', JSON.stringify(player));
}

const setWeaponCrossbow = () => {
  player.weapon = new Weapon("Crossbow", 'crossbow');
  player.basic = "Arrow";
  player.special = "Metal Arrow";
  localStorage.setItem('objPlayer', JSON.stringify(player));
}

const setWeaponLongbow = () => {
  player.weapon = new Weapon("Longbow", 'longbow');  
  player.basic = "Arrow";
  player.special = "Snipe";
  localStorage.setItem('objPlayer', JSON.stringify(player));
}

$(document).ready(function(){

  $("#archer-bow").load("weapons/archer-bow.hbs");
  $("#archer-crossbow").load("weapons/archer-crossbow.hbs");
  $("#archer-longbow").load("weapons/archer-longbow.hbs");

  // --- Weapon Select Button script ---
  $("#archer-bow").click(function(){
    $("#rpg-wpn-btn-crossbow").slideUp(300);
    $("#rpg-wpn-btn-longbow").slideUp(300);
    $("#rpg-wpn-btn-bow").slideDown(300);
  });
  $("#archer-longbow").click(function(){
    $("#rpg-wpn-btn-crossbow").slideUp(300);
    $("#rpg-wpn-btn-bow").slideUp(300);
    $("#rpg-wpn-btn-longbow").slideDown(300);
  });
  $("#archer-crossbow").click(function(){
    $("#rpg-wpn-btn-bow").slideUp(300);
    $("#rpg-wpn-btn-longbow").slideUp(300);
    $("#rpg-wpn-btn-crossbow").slideDown(300);
  });

});
</script>