<script>
const setWeaponMace = () => {
  player.weapon = new Weapon("Mace & Shield", "mace");
  player.basic = "Bludgeon";
  player.special = "Shield Ally";
  localStorage.setItem('objPlayer', JSON.stringify(player));
}

const setWeaponQuarterstaff = () => {
  player.weapon = new Weapon("Quarterstaff", "quarterstaff");
  player.basic = "Downward Strike";
  player.special = "Flash Heal";
  localStorage.setItem('objPlayer', JSON.stringify(player));
}

const setWeaponTome = () => {
  player.weapon = new Weapon("Holy Tome", "tome");
  player.basic = "Blessing";
  player.special = "Healing Circle";
  localStorage.setItem('objPlayer', JSON.stringify(player));
}

$(document).ready(function(){

  $("#cleric-mace").load("weapons/cleric-mace.hbs");
  $("#cleric-quarterstaff").load("weapons/cleric-quarterstaff.hbs");
  $("#cleric-tome").load("weapons/cleric-tome.hbs");

  // --- Weapon Select Button script ---
  $("#cleric-mace").click(function(){
    $("#rpg-wpn-btn-tome").slideUp(300);
    $("#rpg-wpn-btn-quarterstaff").slideUp(300);
    $("#rpg-wpn-btn-mace").slideDown(300);
  });
  $("#cleric-quarterstaff").click(function(){
    $("#rpg-wpn-btn-tome").slideUp(300);
    $("#rpg-wpn-btn-mace").slideUp(300);
    $("#rpg-wpn-btn-quarterstaff").slideDown(300);
  });
  $("#cleric-tome").click(function(){
    $("#rpg-wpn-btn-mace").slideUp(300);
    $("#rpg-wpn-btn-quarterstaff").slideUp(300);
    $("#rpg-wpn-btn-tome").slideDown(300);
  });

});
</script>